{
  "name": "react-ts-vite-template",
  "version": "0.1.0",
  "author": {
    "name": "Fabien MARIE-LOUISE",
    "url": "https://github.com/fabien-ml"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run typecheck && vite build",
    "serve": "npm run build && vite preview --port 3000",
    "test:unit": "jest --watch",
    "test:unit:ci": "jest",
    "test:e2e": "start-server-and-test serve 3000 'cypress open'",
    "test:e2e:ci": "start-server-and-test serve 3000 'cypress run'",
    "typecheck": "tsc",
    "format": "prettier --write 'src/**/*.{ts,tsx,css}' && git update-index --again",
    "lint": "eslint 'src/**/*.{ts,tsx}' --quiet"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@cypress/vite-dev-server": "^2.2.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-legacy": "^1.6.2",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "autoprefixer": "^10.3.7",
    "cypress": "^8.3.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-jest": "^25.0.1",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-testing-library": "^4.12.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.6",
    "postcss": "^8.3.11",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^8.0.1",
    "prettier": "^2.3.2",
    "start-server-and-test": "^1.14.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "vite": "^2.6.7"
  }
}
